---
import Link from "../components/Link.astro";
---

<div x-data="{ showmenu: false }" class="lg:px-20 lg:pt-10 top-0 w-full z-50 bg-white/95 animate__animated animate__fadeInDown">
  <div id="navbar" class="flex flex-row justify-between items-center">
    <div id="logo" class="lg:flex-1">
      <a href="#navbar" class="text-2xl font-medium">MARIA ROSE - Digital Designer</a>
    </div>
    <nav id="desktopmenu" class="hidden lg:block">
      <ul class="text-xl flex flex-row gap-10">
        <li><a href="#about">ABOUT</a></li>
        <li><a href="#competencies">COMPETENCIES</a></li>
        <li><a href="#work">WORK</a></li>
        <li><a href="#contact-section">CONTACT</a></li>
      </ul>
    </nav>
    <button id="burgermenu" class="lg:hidden flex flex-col items-center" x-on:click="showmenu = !showmenu">
      <!-- Hamburger ikon -->
      <div class="w-6 h-0.5 bg-black mb-1"></div>
      <div class="w-6 h-0.5 bg-black mb-1"></div>
      <div class="w-6 h-0.5 bg-black"></div>
    </button>
  </div>

  <nav id="mobilmenu" class="fixed inset-0 bg-white flex flex-col items-center justify-center lg:hidden" x-show="showmenu" x-transition:enter="transition-opacity ease-out duration-300" x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100" x-transition:leave="transition-opacity ease-in duration-300" x-transition:leave-start="opacity-100" x-transition:leave-end="opacity-0">
    <!-- Kryds-ikon -->
    <button class="absolute top-4 right-4 text-2xl text-black" x-on:click="showmenu = false"> &times; </button>
    <!-- Menu punkter -->
    <ul class="text-center w-full max-w-xs">
      <li class="py-4 border-t border-b border-gray-300"><a href="#about" x-on:click="showmenu = false">ABOUT</a></li>
      <li class="py-4 border-t border-b border-gray-300"><a href="#competencies" x-on:click="showmenu = false">COMPETENCIES</a></li>
      <li class="py-4 border-b border-gray-300"><a href="#work" x-on:click="showmenu = false">WORK</a></li>
      <li class="py-4 border-b border-gray-300"><a href="#contact-section" x-on:click="showmenu = false">CONTACT</a></li>
    </ul>
  </nav>
</div>
