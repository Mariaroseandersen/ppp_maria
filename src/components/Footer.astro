<style>
  .circle-container {
    position: static; /* Sørg for at containeren er i en fast position i viewporten */
    width: 800px; /* Juster størrelsen som ønsket */
    height: 800px;
    overflow: visible; /* Sørg for at teksten ikke bliver skåret af */
    bottom: 0; /* Placerer containeren i bunden af viewporten */
    right: 0; /* Placerer containeren til højre af viewporten */
    z-index: 10; /* Sørg for at det er over footeren */
  }

  svg {
    width: 100%;
    height: 100%;
    animation: rotate 30s linear infinite; /* Roterer SVG elementet */
  }

  @keyframes rotate {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  svg text {
    position: fixed;
    font-size: 80px; /* Juster størrelsen af teksten som ønsket */
    fill: rgb(4, 88, 15);
    text-anchor: middle;
  }
</style>

<!-- SVG Container -->
<div class="circle-container">
  <svg viewBox="0 0 800 800">
    <defs>
      <path id="circle-path" d="M 400,400 m -300,0 a 300,300 0 1,1 600,0 a 300,300 0 1,1 -600,0"></path>
    </defs>
    <text>
      <textPath href="#circle-path " startOffset="50%"> GET IN TOUCH • GET IN TOUCH • GET IN TOUCH </textPath>
    </text>
  </svg>
</div>

